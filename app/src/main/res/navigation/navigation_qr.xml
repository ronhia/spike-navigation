<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_qr"
    app:startDestination="@id/navigation_qr_loading">

    <fragment
        android:id="@+id/navigation_qr_loading"
        android:name="com.ronha.spike.navigation.ui.features.qr.loading.QrLoadingFragment"
        android:label="fragment_qr_loading"
        tools:layout="@layout/fragment_qr_loading">
        <action
            android:id="@+id/to_navigation_qr_payment_checkout"
            app:destination="@id/navigation_qr_payment_checkout"
            app:popUpTo="@id/navigation_qr"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_qr_payment_checkout"
        android:name="com.ronha.spike.navigation.ui.features.qr.payment.QrPaymentCheckoutFragment"
        android:label="QrPaymentCheckoutFragment"
        tools:layout="@layout/fragment_qr_payment_checkout">
        <action
            android:id="@+id/to_navigation_qr_payment_confirm"
            app:destination="@id/navigation_qr_payment_confirm" />
    </fragment>

    <fragment
        android:id="@+id/navigation_qr_payment_confirm"
        android:name="com.ronha.spike.navigation.ui.features.qr.payment.QrPaymentConfirmFragment"
        android:label="QrPaymentConfirmFragment"
        tools:layout="@layout/fragment_qr_payment_confirm">
        <action
            android:id="@+id/to_navigation_qr_payment_constancy"
            app:destination="@id/navigation_qr_payment_constancy"
            app:popUpTo="@id/navigation_qr"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_qr_payment_constancy"
        android:name="com.ronha.spike.navigation.ui.features.qr.payment.QrPaymentConstancyFragment"
        android:label="QrPaymentConstancyFragment"
        tools:layout="@layout/fragment_qr_payment_constancy" />

</navigation>